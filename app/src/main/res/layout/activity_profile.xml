<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_c"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE MAHASISWA"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="152dp"
        android:layout_height="141dp"

        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.279" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.595">

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="Nama"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_toRightOf="@+id/nama"
            android:text=": Muhamad Malik Aziz Al Kutbi"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:paddingRight="21dp"
            android:text="NIM"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/nim"
            android:text=": 200602113"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nim"
            android:paddingRight="14dp"
            android:text="Prodi"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nim"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/prodi"
            android:text=": Teknik Informatika"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prodi"
            android:paddingRight="13dp"
            android:text="Kelas"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prodi"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/kelas"
            android:text=": D"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kelas"
            android:paddingRight="4dp"
            android:text="MK"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kelas"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/mk"
            android:text=": Pemrograman Mobile"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mk"
            android:paddingRight="15dp"
            android:text="Semester"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mk"
            android:layout_toRightOf="@+id/semester"
            android:text=": 3 (Tiga)"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hoby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/semester"
            android:paddingRight="15dp"
            android:text="Hoby"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/semester"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/hoby"
            android:text=": Olahraga, Membaca, Belajar Coding"
            android:textColor="#333"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>